<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/frame_only"
    android:layout_height="wrap_content"
    android:padding="@dimen/four_dp" >
    <!--tid,sender,amount,type,datetime,uname,vname-->
    <TextView
        android:id="@+id/tv_oid_transac"
        android:layout_width="wrap_content"
        style="@style/TextCustom"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="wrap_content"
        android:padding="@dimen/four_dp"
        android:text="id" />
    <TextView
        android:id="@+id/tv_fromto"
        android:padding="@dimen/four_dp"
        android:text="name"
        android:textAllCaps="true"
        android:layout_alignBaseline="@id/tv_oid_transac"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/tv_oid_transac"
        android:layout_width="wrap_content"
        style="@style/TextCustom"
        android:layout_marginStart="@dimen/four_dp"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_fromto"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:padding="12dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:visibility="gone"
        android:background="@drawable/frame_back_grey_oval"
        android:text="" />

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_score"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:padding="@dimen/eight_dp"
        android:layout_height="wrap_content"
        android:text="from to date" />

</RelativeLayout>