<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_camera_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ReUploadActivity">

    <ImageView
        android:id="@+id/iv_loginout_click"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:onClick="onTakePicClicked"
        android:contentDescription="take a picture"
        android:scaleType="centerInside"
        android:src="@drawable/camera_take_pic"
        android:padding="@dimen/four_dp"
        />

    <Button
        android:id="@+id/btn_reupload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/frame_border_red"
        android:onClick="onUploadforApprovalClicked"
        android:text="Upload for approval"
        android:textColor="@color/colorPrimary"
        android:visibility="visible" />
    <!--<Button
        android:id="@+id/btn_logout_punch"
        android:onClick="onLogoutPunchClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/frame_border_red"
        android:text="logout as "
        android:textColor="@color/colorPrimary" />-->
</LinearLayout>